<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="mensualite_view_form" model="ir.ui.view">
        <field name="name">mensualite_form</field>
        <field name="model">mensualite</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <group>
                        <field name="id_mensualite" />
                    </group>
                    <group>
                        <field name="id_pret" />
                    </group>
                    <group>
                        <field name="name" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="mensualite_view_tree" model="ir.ui.view">
        <field name="name">mensualite_tree</field>
        <field name="model">mensualite</field>
        <field name="arch" type="xml">
            <tree>
                <field name="id_mensualite" />
                <field name="id_pret" />
                <field name="name" />
            </tree>
        </field>
    </record>

    <act_window
        id="mensualite_mensualite_action_window"
        name="Mensualite"
        res_model="mensualite"
        view_mode="list,form"
    />
</odoo>

<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="occupation_view_form" model="ir.ui.view">
        <field name="name">occupation_form</field>
        <field name="model">occupation</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                    <group>
                        <field name="occupation" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="occupation_view_tree" model="ir.ui.view">
        <field name="name">occupation_tree</field>
        <field name="model">occupation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="occupation" />
            </tree>
        </field>
    </record>

    <act_window
        id="occupation_occupation_action_window"
        name="Occupation"
        res_model="occupation"
        view_mode="list,form"
    />
</odoo>

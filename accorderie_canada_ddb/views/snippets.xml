<odoo>
    <template id="accorderie_liste_service_offert" name="Liste service offert">
        <t t-ignore="true">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6 s_col_no_bgcolor pb24">
                        <div class="row" t-if="offres">
                            <div t-foreach="offres" t-as="offre">
                                <a t-if="offre" t-att-href="'/offre/%d' % offre.id">
                                    <div class="col-lg-12 pt16 pb16" data-name="Box">
                                        <i class="fa fa-2x fa-files-o rounded-circle bg-primary s_features_grid_icon"/>
                                        <div class="s_features_grid_content">
                                            <h4 t-if="offre.description" class="o_default_snippet_text"
                                                t-field="offre.description"/>
                                            <h4 t-if="not offre.description" class="o_default_snippet_text">DESCRIPTION
                                                VIDE
                                            </h4>
                                            <p t-if="offre.condition" class="o_default_snippet_text"
                                               t-field="offre.condition"/>
                                            <p t-if="offre.membre and offre.membre.nom_complet" class="o_default_snippet_text"
                                               t-field="offre.membre.nom_complet"/>
                                            <p t-if="offre_index &lt; len(lst_time)" class="o_default_snippet_text"
                                               t-raw="lst_time[offre_index]"/>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <div class="row" t-if="not offres">
                            Aucune offre disponible.
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <!-- Snippets -->
    <template id="s_accorderie_canada_ddb" name="Accorderie Canada Ddb">
        <section class="o_accorderie_canada_ddb oe_snippet_body">
            <div class="container">
                Aucune offre disponible
            </div>
        </section>
    </template>
    <!-- Add snippets to menu -->
    <template id="snippets" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
            <t
                t-snippet="accorderie_canada_ddb.s_accorderie_canada_ddb"
                t-thumbnail="/accorderie_canada_ddb/static/description/icon.png"
            />
        </xpath>
    </template>
    <!-- Add stylesheet and Javascript -->
    <template id="assets_frontend" inherit_id="website.assets_frontend">
        <xpath expr="//link[last()]" position="after">
            <link
                rel="stylesheet"
                type="text/scss"
                href="/accorderie_canada_ddb/static/src/scss/accorderie_canada_ddb.scss"
            />
        </xpath>
        <xpath expr="//script[last()]" position="after">
            <script
                type="text/javascript"
                src="/accorderie_canada_ddb/static/src/js/website.accorderie_canada_ddb.animation.js"
            />
        </xpath>
    </template>
</odoo>

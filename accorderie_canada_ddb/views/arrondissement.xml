<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="arrondissement_view_form" model="ir.ui.view">
        <field name="name">arrondissement_form</field>
        <field name="model">arrondissement</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <group>
                        <field name="nom" />
                    </group>
                    <group>
                        <field name="ville" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="arrondissement_view_tree" model="ir.ui.view">
        <field name="name">arrondissement_tree</field>
        <field name="model">arrondissement</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nom" />
                <field name="ville" />
            </tree>
        </field>
    </record>

    <act_window
        id="arrondissement_arrondissement_action_view_action_window"
        name="arrondissement_action_view"
        res_model="arrondissement"
        view_mode="list,form"
    />
</odoo>

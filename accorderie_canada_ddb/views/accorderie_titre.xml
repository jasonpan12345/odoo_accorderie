<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="accorderie_titre_view_form" model="ir.ui.view">
        <field name="name">accorderie_titre_form</field>
        <field name="model">accorderie.titre</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <group>
                        <field name="nom" />
                    </group>
                    <group>
                        <field name="datemaj_titre" />
                    </group>
                    <group>
                        <field name="visible_titre" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="accorderie_titre_view_tree" model="ir.ui.view">
        <field name="name">accorderie_titre_tree</field>
        <field name="model">accorderie.titre</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nom" />
                <field name="datemaj_titre" />
                <field name="visible_titre" />
            </tree>
        </field>
    </record>

    <act_window
        id="accorderie_titre_accorderie_titre_action_window"
        name="Accorderie Titre"
        res_model="accorderie.titre"
        view_mode="list,form"
    />
</odoo>

<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="type_fichier_view_form" model="ir.ui.view">
        <field name="name">type_fichier_form</field>
        <field name="model">type.fichier</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <group>
                        <field name="datemaj_typefichier" />
                    </group>
                    <group>
                        <field name="name" />
                    </group>
                    <group>
                        <field name="typefichier" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="type_fichier_view_tree" model="ir.ui.view">
        <field name="name">type_fichier_tree</field>
        <field name="model">type.fichier</field>
        <field name="arch" type="xml">
            <tree>
                <field name="datemaj_typefichier" />
                <field name="name" />
                <field name="typefichier" />
            </tree>
        </field>
    </record>

    <act_window
        id="type_fichier_type_fichier_action_window"
        name="Type Fichier"
        res_model="type.fichier"
        view_mode="list,form"
    />
</odoo>

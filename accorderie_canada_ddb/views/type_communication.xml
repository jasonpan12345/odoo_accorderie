<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="type_communication_view_form" model="ir.ui.view">
        <field name="name">type_communication_form</field>
        <field name="model">type.communication</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                    <group>
                        <field name="typecommunication" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="type_communication_view_tree" model="ir.ui.view">
        <field name="name">type_communication_tree</field>
        <field name="model">type.communication</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="typecommunication" />
            </tree>
        </field>
    </record>

    <act_window
        id="type_communication_type_communication_action_window"
        name="Type Communication"
        res_model="type.communication"
        view_mode="list,form"
    />
</odoo>

<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="accorderie_ville_view_form" model="ir.ui.view">
        <field name="name">accorderie_ville_form</field>
        <field name="model">accorderie.ville</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <group>
                        <field name="code" />
                    </group>
                    <group>
                        <field name="nom" />
                    </group>
                    <group>
                        <field name="region" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="accorderie_ville_view_tree" model="ir.ui.view">
        <field name="name">accorderie_ville_tree</field>
        <field name="model">accorderie.ville</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code" />
                <field name="nom" />
                <field name="region" />
            </tree>
        </field>
    </record>

    <act_window
        id="accorderie_ville_accorderie_ville_action_window"
        name="Accorderie Ville"
        res_model="accorderie.ville"
        view_mode="list,form"
    />
</odoo>

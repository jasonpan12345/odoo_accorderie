                <filter domain="[('remarque','!=',False)]" name="remarque" string="Remarque" />
                <filter domain="[('transaction_valide','!=',False)]" name="Validé" string="Validé" />
                <filter domain="[('type_echange','!=',False)]" name="type_echange" string="Type d'&#233;change" />
            </search>
        </field>

<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="accorderie_categorie_service_view_form" model="ir.ui.view">
        <field name="name">accorderie_categorie_service_form</field>
        <field name="model">accorderie.categorie.service</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="actif" widget="boolean_button" />
                        </button>
                    </div>
                    <group>
                        <field name="nom" />
                    </group>
                    <group>
                        <field name="approuve" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="accorderie_categorie_service_view_tree" model="ir.ui.view">
        <field name="name">accorderie_categorie_service_tree</field>
        <field name="model">accorderie.categorie.service</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nom" />
                <field name="approuve" />
            </tree>
        </field>
    </record>

    <act_window
        id="accorderie_categorie_service_accorderie_categorie_service_action_window"
        name="Accorderie Categorie Service"
        res_model="accorderie.categorie.service"
        view_mode="list,form"
    />
</odoo>

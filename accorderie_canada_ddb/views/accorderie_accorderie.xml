<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="accorderie_accorderie_view_form" model="ir.ui.view">
        <field name="name">accorderie_accorderie_form</field>
        <field name="model">accorderie.accorderie</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" />
                        </button>
                    </div>
                    <group>
                        <field name="nom" />
                    </group>
                    <group>
                        <field name="annee_demarrage" />
                    </group>
                    <group>
                        <field name="adresse" />
                    </group>
                    <group>
                        <field name="arrondissement" />
                    </group>
                    <group>
                        <field name="code_postal" />
                    </group>
                    <group>
                        <field name="courriel" />
                    </group>
                    <group>
                        <field name="date_mise_a_jour" />
                    </group>
                    <group>
                        <field name="grp_achat_administrateur" />
                    </group>
                    <group>
                        <field name="grp_achat_membre" />
                    </group>
                    <group>
                        <field name="logo" widget="image" />
                    </group>
                    <group>
                        <field name="message_accueil" />
                    </group>
                    <group>
                        <field name="message_grp_achat" />
                    </group>
                    <group>
                        <field name="region" />
                    </group>
                    <group>
                        <field name="telecopieur" />
                    </group>
                    <group>
                        <field name="telephone" />
                    </group>
                    <group>
                        <field name="url_public" />
                    </group>
                    <group>
                        <field name="url_transactionnel" />
                    </group>
                    <group>
                        <field name="ville" />
                    </group>
                    <group>
                        <field name="membre" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="accorderie_accorderie_view_graph" model="ir.ui.view">
        <field name="name">accorderie_accorderie_graph</field>
        <field name="model">accorderie.accorderie</field>
        <field name="arch" type="xml">
            <graph string="Accorderie accorderie">
                <field name="nom" type="row" />
                <field name="adresse" type="row" />
                <field name="arrondissement" type="row" />
                <field name="code_postal" type="row" />
                <field name="courriel" type="row" />
                <field name="date_mise_a_jour" type="row" />
                <field name="grp_achat_administrateur" type="row" />
                <field name="grp_achat_membre" type="row" />
                <field name="logo" type="row" />
                <field name="message_accueil" type="row" />
                <field name="message_grp_achat" type="row" />
                <field name="region" type="row" />
                <field name="telecopieur" type="row" />
                <field name="telephone" type="row" />
                <field name="url_public" type="row" />
                <field name="url_transactionnel" type="row" />
                <field name="ville" type="row" />
            </graph>
        </field>
    </record>

    <record id="accorderie_accorderie_view_kanban" model="ir.ui.view">
        <field name="name">accorderie_accorderie_kanban</field>
        <field name="model">accorderie.accorderie</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="nom" />
                <field name="adresse" />
                <field name="arrondissement" />
                <field name="code_postal" />
                <field name="courriel" />
                <field name="date_mise_a_jour" />
                <field name="grp_achat_administrateur" />
                <field name="grp_achat_membre" />
                <field name="logo" widget="image" />
                <field name="message_accueil" />
                <field name="message_grp_achat" />
                <field name="region" />
                <field name="telecopieur" />
                <field name="telephone" />
                <field name="url_public" widget="link_button" />
                <field name="url_transactionnel" widget="link_button" />
                <field name="ville" />
                <field name="membre" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="nom" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="adresse" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="arrondissement" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="code_postal" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="courriel" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="date_mise_a_jour" />
                                        </strong>
                                    </li>
                                    <li
                                        class="text-success float-right mb4"
                                        t-if="record.grp_achat_administrateur.raw_value"
                                    >
                                        <i class="fa fa-circle" role="img" aria-label="Ok" title="Ok" />
                                    </li>
                                    <li
                                        class="text-danger float-right mb4"
                                        t-if="!record.grp_achat_administrateur.raw_value"
                                    >
                                        <i class="fa fa-circle" role="img" aria-label="Invalid" title="Invalid" />
                                    </li>
                                    <li class="text-success float-right mb4" t-if="record.grp_achat_membre.raw_value">
                                        <i class="fa fa-circle" role="img" aria-label="Ok" title="Ok" />
                                    </li>
                                    <li class="text-danger float-right mb4" t-if="!record.grp_achat_membre.raw_value">
                                        <i class="fa fa-circle" role="img" aria-label="Invalid" title="Invalid" />
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="logo" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="message_accueil" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="message_grp_achat" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="region" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="telecopieur" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="telephone" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="url_public" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="url_transactionnel" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="ville" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="membre" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="accorderie_accorderie_view_pivot" model="ir.ui.view">
        <field name="name">accorderie_accorderie_pivot</field>
        <field name="model">accorderie.accorderie</field>
        <field name="arch" type="xml">
            <pivot string="Accorderie accorderie">
                <field name="nom" type="row" />
                <field name="adresse" type="row" />
                <field name="arrondissement" type="row" />
                <field name="code_postal" type="row" />
                <field name="courriel" type="row" />
                <field name="date_mise_a_jour" type="row" />
                <field name="grp_achat_administrateur" type="row" />
                <field name="grp_achat_membre" type="row" />
                <field name="message_accueil" type="row" />
                <field name="message_grp_achat" type="row" />
                <field name="region" type="row" />
                <field name="telecopieur" type="row" />
                <field name="telephone" type="row" />
                <field name="url_public" type="row" />
                <field name="url_transactionnel" type="row" />
                <field name="ville" type="row" />
            </pivot>
        </field>
    </record>

    <record id="accorderie_accorderie_view_search" model="ir.ui.view">
        <field name="name">accorderie_accorderie_search</field>
        <field name="model">accorderie.accorderie</field>
        <field name="arch" type="xml">
            <search string="Accorderie accorderie">
                <filter name="nom" string="Nom" domain="[('nom','!=',False)]" />
                <filter name="Inactive" string="Inactive Accorderie accorderie" domain="[('active','=',False)]" />
                <filter name="adresse" string="Adresse" domain="[('adresse','!=',False)]" />
                <filter name="arrondissement" string="Arrondissement" domain="[('arrondissement','!=',False)]" />
                <filter name="code_postal" string="Code postal" domain="[('code_postal','!=',False)]" />
                <filter name="courriel" string="Adresse courriel" domain="[('courriel','!=',False)]" />
                <filter
                    name="date_mise_a_jour"
                    string="Derni&#232;re mise &#224; jour"
                    domain="[('date_mise_a_jour','!=',False)]"
                />
                <filter
                    name="grp_achat_administrateur"
                    string="Groupe d'achats des administrateurs"
                    domain="[('grp_achat_administrateur','=',True)]"
                />
                <filter
                    name="grp_achat_membre"
                    string="Groupe d'achats membre"
                    domain="[('grp_achat_membre','=',True)]"
                />
                <filter name="logo" string="Logo" domain="[('logo','!=',False)]" />
                <filter name="message_accueil" string="Message d'accueil" domain="[('message_accueil','!=',False)]" />
                <filter
                    name="message_grp_achat"
                    string="Message groupe d'achats"
                    domain="[('message_grp_achat','!=',False)]"
                />
                <filter name="region" string="R&#233;gion administrative" domain="[('region','!=',False)]" />
                <filter name="telecopieur" string="T&#233;l&#233;copieur" domain="[('telecopieur','!=',False)]" />
                <filter name="telephone" string="T&#233;l&#233;phone" domain="[('telephone','!=',False)]" />
                <filter name="url_public" string="Lien du site web publique" domain="[('url_public','!=',False)]" />
                <filter
                    name="url_transactionnel"
                    string="Lien du site web transactionnel"
                    domain="[('url_transactionnel','!=',False)]"
                />
                <filter name="ville" string="Ville" domain="[('ville','!=',False)]" />
                <filter name="membre" string="Membre" domain="[('membre','!=',False)]" />
            </search>
        </field>
    </record>

    <record id="accorderie_accorderie_view_tree" model="ir.ui.view">
        <field name="name">accorderie_accorderie_tree</field>
        <field name="model">accorderie.accorderie</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nom" />
                <field name="adresse" />
                <field name="arrondissement" />
                <field name="code_postal" />
                <field name="courriel" />
                <field name="date_mise_a_jour" />
                <field name="grp_achat_administrateur" />
                <field name="grp_achat_membre" />
                <field name="logo" widget="image" />
                <field name="region" />
                <field name="telecopieur" />
                <field name="telephone" />
                <field name="url_public" widget="link_button" />
                <field name="url_transactionnel" widget="link_button" />
                <field name="ville" />
                <field name="membre" />
            </tree>
        </field>
    </record>

    <act_window
        id="accorderie_accorderie_accorderie_action_window"
        name="Accorderie"
        res_model="accorderie.accorderie"
        view_mode="kanban,pivot,list,graph,form"
    />
</odoo>

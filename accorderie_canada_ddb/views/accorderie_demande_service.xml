<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="accorderie_demande_service_view_form" model="ir.ui.view">
        <field name="name">accorderie_demande_service_form</field>
        <field name="model">accorderie.demande.service</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" />
                        </button>
                    </div>
                    <group>
                        <field name="titre" />
                    </group>
                    <group>
                        <field name="accorderie" />
                    </group>
                    <group>
                        <field name="approuver" />
                    </group>
                    <group>
                        <field name="date_debut" />
                    </group>
                    <group>
                        <field name="date_fin" />
                    </group>
                    <group>
                        <field name="description" />
                    </group>
                    <group>
                        <field name="membre" />
                    </group>
                    <group>
                        <field name="commentaire" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="accorderie_demande_service_view_graph" model="ir.ui.view">
        <field name="name">accorderie_demande_service_graph</field>
        <field name="model">accorderie.demande.service</field>
        <field name="arch" type="xml">
            <graph string="Accorderie demande service">
                <field name="titre" type="row" />
                <field name="accorderie" type="row" />
                <field name="approuver" type="row" />
                <field name="date_debut" type="row" />
                <field name="date_fin" type="row" />
                <field name="description" type="row" />
                <field name="membre" type="row" />
            </graph>
        </field>
    </record>

    <record id="accorderie_demande_service_view_kanban" model="ir.ui.view">
        <field name="name">accorderie_demande_service_kanban</field>
        <field name="model">accorderie.demande.service</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="titre" />
                <field name="accorderie" />
                <field name="approuver" />
                <field name="date_debut" />
                <field name="date_fin" />
                <field name="description" />
                <field name="membre" />
                <field name="commentaire" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="titre" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="accorderie" />
                                        </strong>
                                    </li>
                                    <li class="text-success float-right mb4" t-if="record.approuver.raw_value">
                                        <i class="fa fa-circle" role="img" aria-label="Ok" title="Ok" />
                                    </li>
                                    <li class="text-danger float-right mb4" t-if="!record.approuver.raw_value">
                                        <i class="fa fa-circle" role="img" aria-label="Invalid" title="Invalid" />
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="date_debut" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="date_fin" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="description" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="membre" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="commentaire" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="accorderie_demande_service_view_pivot" model="ir.ui.view">
        <field name="name">accorderie_demande_service_pivot</field>
        <field name="model">accorderie.demande.service</field>
        <field name="arch" type="xml">
            <pivot string="Accorderie demande service">
                <field name="titre" type="row" />
                <field name="accorderie" type="row" />
                <field name="approuver" type="row" />
                <field name="date_debut" type="row" />
                <field name="date_fin" type="row" />
                <field name="description" type="row" />
                <field name="membre" type="row" />
            </pivot>
        </field>
    </record>

    <record id="accorderie_demande_service_view_search" model="ir.ui.view">
        <field name="name">accorderie_demande_service_search</field>
        <field name="model">accorderie.demande.service</field>
        <field name="arch" type="xml">
            <search string="Accorderie demande service">
                <filter name="titre" string="Titre" domain="[('titre','!=',False)]" />
                <filter name="accorderie" string="Accorderie" domain="[('accorderie','!=',False)]" />
                <filter name="Inactive" string="Inactive Accorderie demande service" domain="[('active','=',False)]" />
                <filter name="approuver" string="Approuv&#233;" domain="[('approuver','=',True)]" />
                <filter name="date_debut" string="Date d&#233;but" domain="[('date_debut','!=',False)]" />
                <filter name="date_fin" string="Date fin" domain="[('date_fin','!=',False)]" />
                <filter name="description" string="Description" domain="[('description','!=',False)]" />
                <filter name="membre" string="Membre" domain="[('membre','!=',False)]" />
                <filter name="commentaire" string="Commentaire" domain="[('commentaire','!=',False)]" />
            </search>
        </field>
    </record>

    <record id="accorderie_demande_service_view_tree" model="ir.ui.view">
        <field name="name">accorderie_demande_service_tree</field>
        <field name="model">accorderie.demande.service</field>
        <field name="arch" type="xml">
            <tree>
                <field name="titre" />
                <field name="accorderie" />
                <field name="approuver" />
                <field name="date_debut" />
                <field name="date_fin" />
                <field name="description" />
                <field name="membre" />
                <field name="commentaire" />
            </tree>
        </field>
    </record>

    <act_window
        id="accorderie_demande_service_demande_de_services_action_window"
        name="Demande de services"
        res_model="accorderie.demande.service"
        view_mode="kanban,pivot,list,graph,form"
    />
</odoo>

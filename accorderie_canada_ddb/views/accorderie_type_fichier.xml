<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="accorderie_type_fichier_view_form" model="ir.ui.view">
        <field name="name">accorderie_type_fichier_form</field>
        <field name="model">accorderie.type.fichier</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <group>
                        <field name="nom" />
                    </group>
                    <group>
                        <field name="date_mise_a_jour" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="accorderie_type_fichier_view_tree" model="ir.ui.view">
        <field name="name">accorderie_type_fichier_tree</field>
        <field name="model">accorderie.type.fichier</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nom" />
                <field name="date_mise_a_jour" />
            </tree>
        </field>
    </record>

    <act_window
        id="accorderie_type_fichier_type_de_fichiers_action_window"
        name="Type de fichiers"
        res_model="accorderie.type.fichier"
        view_mode="list,form"
    />
</odoo>

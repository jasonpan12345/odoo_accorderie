<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="achat_ponctuel_view_form" model="ir.ui.view">
        <field name="name">achat_ponctuel_form</field>
        <field name="model">achat.ponctuel</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <group>
                        <field name="date_achat" />
                    </group>
                    <group>
                        <field name="date_mise_a_jour" />
                    </group>
                    <group>
                        <field name="est_facture" />
                    </group>
                    <group>
                        <field name="majoration" />
                    </group>
                    <group>
                        <field name="membre" />
                    </group>
                    <group>
                        <field name="name" />
                    </group>
                    <group>
                        <field name="paiement_effectue" />
                    </group>
                    <group>
                        <field name="taxe_federal" />
                    </group>
                    <group>
                        <field name="taxe_provincial" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="achat_ponctuel_view_tree" model="ir.ui.view">
        <field name="name">achat_ponctuel_tree</field>
        <field name="model">achat.ponctuel</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date_achat" />
                <field name="date_mise_a_jour" />
                <field name="est_facture" />
                <field name="majoration" />
                <field name="membre" />
                <field name="name" />
                <field name="paiement_effectue" />
                <field name="taxe_federal" />
                <field name="taxe_provincial" />
            </tree>
        </field>
    </record>

    <act_window
        id="achat_ponctuel_achat_ponctuel_action_view_action_window"
        name="achat_ponctuel_action_view"
        res_model="achat.ponctuel"
        view_mode="list,form"
    />
</odoo>

<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="accorderie_type_service_categorie_view_form" model="ir.ui.view">
        <field name="name">accorderie_type_service_categorie_form</field>
        <field name="model">accorderie.type.service.categorie</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" />
                        </button>
                    </div>
                    <group>
                        <field name="nom" />
                    </group>
                    <group>
                        <field name="approuve" />
                    </group>
                    <group>
                        <field name="nocategorie" />
                    </group>
                    <group>
                        <field name="type_service_sous_categorie" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="accorderie_type_service_categorie_view_tree" model="ir.ui.view">
        <field name="name">accorderie_type_service_categorie_tree</field>
        <field name="model">accorderie.type.service.categorie</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nom" />
                <field name="approuve" />
                <field name="nocategorie" />
                <field name="type_service_sous_categorie" />
            </tree>
        </field>
    </record>

    <act_window
        id="accorderie_type_service_categorie_cat&#233;gorie_de_services_action_window"
        name="Cat&#233;gorie de services"
        res_model="accorderie.type.service.categorie"
        view_mode="list,form"
    />
</odoo>

<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="ville_view_form" model="ir.ui.view">
        <field name="name">ville_form</field>
        <field name="model">ville</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <group>
                        <field name="code" />
                    </group>
                    <group>
                        <field name="nom" />
                    </group>
                    <group>
                        <field name="region" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ville_view_tree" model="ir.ui.view">
        <field name="name">ville_tree</field>
        <field name="model">ville</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code" />
                <field name="nom" />
                <field name="region" />
            </tree>
        </field>
    </record>

    <act_window
        id="ville_ville_action_view_action_window"
        name="ville_action_view"
        res_model="ville"
        view_mode="list,form"
    />
</odoo>

<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="region_view_form" model="ir.ui.view">
        <field name="name">region_form</field>
        <field name="model">region</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <group>
                        <field name="code" />
                    </group>
                    <group>
                        <field name="nom" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="region_view_tree" model="ir.ui.view">
        <field name="name">region_tree</field>
        <field name="model">region</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code" />
                <field name="nom" />
            </tree>
        </field>
    </record>

    <act_window
        id="region_region_action_view_action_window"
        name="region_action_view"
        res_model="region"
        view_mode="list,form"
    />
</odoo>
